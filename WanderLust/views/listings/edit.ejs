<% layout("/layouts/boilerplate") -%>
<body>
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                    class="form-control"
                    type="text"
                    name="listing[title]"
                    value="<%= listing.title %>"
                />
            </div>
    
            <div class="mb-3">
                <label for="title" class="form-label">Description</label>
                <textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>
            </div>
    
            <div class="mb-3">
                <label for="title" class="form-label">Image</label>
                <input
                    class="form-control"
                    type="text"
                    name="listing[image]"
                    value="<%= listing.image %>"
                />
            </div>
    
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="title" class="form-label">Price</label>
                    <input
                        class="form-control"
                        type="number"
                        name="listing[price]"
                        value="<%= listing.price %>"
                    />
                </div>
        
                <div class="mb-3 col-md-8">
                    <label for="title" class="form-label">Country</label>
                    <input
                        class="form-control"
                        type="text"
                        name="listing[country]"
                        value="<%= listing.country %>"
                    />
                </div>
            </div>
    
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input
                    class="form-control"
                    type="text"
                    name="listing[location]"
                    value="<%= listing.location %>"
                />
            </div>
    
            <button class="btn btn-crimson mb-3">Edit</button>
        </form>
    </div>
</body>
