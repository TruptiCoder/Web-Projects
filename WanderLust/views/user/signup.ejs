<% layout("/layouts/boilerplate") -%>
<body>
    <div class="col-md-8 offset-md-2">
        <h3>SignUp on WanderLust</h3>
        <form class="needs-validation" action="/signup" method="POST" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                    type="text"
                    name="username"
                    id="username"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Try other username</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                    type="password"
                    name="password"
                    id="password"
                    class="form-control"
                    required
                />
            </div>
    
            <button class="btn btn-success mb-3">SignUp</button>
        </form>
    </div>
</body>
